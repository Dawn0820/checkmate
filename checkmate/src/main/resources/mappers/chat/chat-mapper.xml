 <insert id="insertChat">
 	INSERT INTO CHAT 
	 				(
			 		CHAT_NO,
			 		SG_NO,
			 		USER_NICK,
			 		CHAT_CONTENT,
			 		CHAT_SENDDATE
		 			)
		 		VALUES
		 			(
		 			SEQ_CHAT_NO.NEXTVAL,
		 			#{sgNo},
		 			#{userNick},
		 			#{chatContent}
		 			#{chatSendDate}
		 			)
 	
 </insert>
	
	
